<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/master/src/Core/System/SystemConfig/Schema/config.xsd">

    <card>
        <title>API configurations</title>
        <title lang="ru-RU">Конфигурации API</title>
        <title lang="hy-AM">API կոնֆիգուրացիաներ</title>

        <input-field type="bool">
            <name>testMode</name>
            <label>Enable test mode</label>
            <label lang="hy-AM">Միացնել փորձարկման ռեժիմը</label>
            <label lang="ru-RU">Включить тестовый режим</label>
            <defaultValue>true</defaultValue>
            <helpText>Enable test mode</helpText>
            <helpText lang="hy-AM">Միացնել փորձարկման ռեժիմը</helpText>
            <helpText lang="ru-RU">Включить тестовый режим</helpText>
        </input-field>
    </card>

    <card>
        <title>Payment options</title>
        <title lang="ru-RU">Параметры оплаты</title>
        <title lang="hy-AM">Վճարման կարգավորումներ</title>

        <input-field type="bool">
            <name>freezePayments</name>
            <label>Enable payment freezing</label>
            <label lang="hy-AM">Միացնել վճարման սառեցումը</label>
            <label lang="ru-RU">Включить заморозку платежей</label>
            <defaultValue>false</defaultValue>
            <helpText>Authorize payments and capture after shipping</helpText>
            <helpText lang="hy-AM">Ավտորիզացնել վճարումները և գանձել առաքումից հետո</helpText>
            <helpText lang="ru-RU">Авторизовать платежи и списывать после отправки</helpText>
        </input-field>

        <input-field type="bool">
            <name>enableBindings</name>
            <label>Enable saved payment bindings</label>
            <label lang="hy-AM">Միացնել պահված վճարման կապերը</label>
            <label lang="ru-RU">Включить сохраненные способы оплаты</label>
            <defaultValue>true</defaultValue>
            <helpText>Allow customers to reuse saved payment bindings</helpText>
            <helpText lang="hy-AM">Թույլատրել հաճախորդներին օգտագործել պահված կապերը</helpText>
            <helpText lang="ru-RU">Разрешить клиентам использовать сохраненные способы оплаты</helpText>
        </input-field>

        <input-field type="bool">
            <name>showSaveCardCheckbox</name>
            <label>Show "Save this card" checkbox</label>
            <label lang="hy-AM">Ցուցադրել «Պահպանել այս քարտը» վանդակը</label>
            <label lang="ru-RU">Показывать флажок «Сохранить эту карту»</label>
            <defaultValue>true</defaultValue>
            <helpText>Display checkbox during checkout to save card</helpText>
            <helpText lang="hy-AM">Ցուցադրել վանդակը՝ քարտը պահելու համար</helpText>
            <helpText lang="ru-RU">Отображать флажок при оформлении заказа для сохранения карты</helpText>
        </input-field>

        <input-field type="bool">
            <name>allowMultipleBindings</name>
            <label>Allow multiple bindings per customer</label>
            <label lang="hy-AM">Թույլատրել մեկից ավելի կապեր յուրաքանչյուր հաճախորդի համար</label>
            <label lang="ru-RU">Разрешить несколько связок для клиента</label>
            <defaultValue>true</defaultValue>
            <helpText>Permit storing more than one binding</helpText>
            <helpText lang="hy-AM">Թույլատրել պահել մեկից ավելի կապ</helpText>
            <helpText lang="ru-RU">Разрешить сохранять более одной связки</helpText>
        </input-field>

        <input-field type="bool">
            <name>bindingPerSalesChannel</name>
            <label>Bind per sales channel</label>
            <label lang="hy-AM">Կապել վաճառքի յուրաքանչյուր ալիքով</label>
            <label lang="ru-RU">Связывать по каналу продаж</label>
            <defaultValue>false</defaultValue>
            <helpText>Restrict bindings to originating sales channel</helpText>
            <helpText lang="hy-AM">Սահմանափակել կապերը ըստ սկզբնական վաճառքի ալիքի</helpText>
            <helpText lang="ru-RU">Ограничить связки исходным каналом продаж</helpText>
        </input-field>

        <input-field type="select">
            <name>defaultBindingBehavior</name>
            <label>Default binding selection</label>
            <label lang="hy-AM">Կապի կանխադրված ընտրություն</label>
            <label lang="ru-RU">Выбор связки по умолчанию</label>
            <defaultValue>none</defaultValue>
            <options>
                <option value="none">
                <label>None</label>
                <label lang="hy-AM">Չկա</label>
                <label lang="ru-RU">Нет</label>
            </option>
                <option value="first">
                <label>First saved</label>
                <label lang="hy-AM">Առաջին պահվածը</label>
                <label lang="ru-RU">Первая сохраненная</label>
            </option>
                <option value="mostRecent">
                <label>Most recent</label>
                <label lang="hy-AM">Վերջինը</label>
                <label lang="ru-RU">Последняя</label>
            </option>
            </options>
            <helpText>Automatic selection when no binding chosen</helpText>
            <helpText lang="hy-AM">Ավտոմատ ընտրություն, երբ կապը չի ընտրվել</helpText>
            <helpText lang="ru-RU">Автоматический выбор, если связка не выбрана</helpText>
        </input-field>
    </card>

    <card>
        <title>Live API configurations</title>
        <title lang="ru-RU">Конфигурации Live API</title>
        <title lang="hy-AM">Live API կոնֆիգուրացիաներ</title>
        <input-field>
            <name>clientId</name>
            <label>Client Id</label>
            <label lang="hy-AM">Առևտրային կետի նույնականացուցիչ</label>
            <label lang="ru-RU">Идентификатор магазина</label>
            <defaultValue></defaultValue>
            <helpText>Client Id for the Ameriabank API</helpText>
            <helpText lang="hy-AM">Ամերիաբանկի API-ին փոխանցվող առևտրային կետի նույնականացուցիչ</helpText>
            <helpText lang="ru-RU">Идентификатор магазина для API Америабанка</helpText>
        </input-field>
        <input-field>
            <name>username</name>
            <label>Username</label>
            <label lang="hy-AM">Մուտքանուն</label>
            <label lang="ru-RU">Имя пользователя</label>
            <defaultValue></defaultValue>
            <helpText>Username for the Ameriabank API</helpText>
            <helpText lang="hy-AM">Ամերիաբանկի API-ին փոխանցվող մուտքանուն</helpText>
            <helpText lang="ru-RU">Имя пользователя для API Америабанка</helpText>
        </input-field>
        <input-field type="password">
            <name>password</name>
            <label>Password</label>
            <label lang="hy-AM">Գաղտնաբառ</label>
            <label lang="ru-RU">Пароль</label>
            <defaultValue></defaultValue>
            <helpText>Password for the Ameriabank API</helpText>
            <helpText lang="hy-AM">Ամերիաբանկի API-ին փոխանցվող գաղտնաբառ</helpText>
            <helpText lang="ru-RU">Пароль для API Америабанка</helpText>
        </input-field>
        <input-field>
            <name>apiUri</name>
            <label>Main URI</label>
            <label lang="hy-AM">Հիմնական URI</label>
            <label lang="ru-RU">Основной URI</label>
            <defaultValue>https://services.ameriabank.am/VPOS</defaultValue>
            <helpText>Main payment system address</helpText>
            <helpText lang="hy-AM">Հիմնական վճարային համակարգի հասցե</helpText>
            <helpText lang="ru-RU">Адрес основной платежной системы</helpText>
        </input-field>
        <input-field>
            <name>description</name>
            <label>Transaction description</label>
            <label lang="hy-AM">Գործարքի նկարագիր</label>
            <label lang="ru-RU">Описание транзакции</label>
            <defaultValue></defaultValue>
            <helpText>Transaction description</helpText>
            <helpText lang="hy-AM">Գործարքի նկարագիր</helpText>
            <helpText lang="ru-RU">Описание транзакции</helpText>
        </input-field>
    </card>
    <card>
        <title>Test API configurations</title>
        <title lang="ru-RU">Конфигурации Test API</title>
        <title lang="hy-AM">Test API կոնֆիգուրացիաներ</title>
        <input-field>
            <name>testClientId</name>
            <label>Client Id</label>
            <label lang="hy-AM">Առևտրային կետի նույնականացուցիչ</label>
            <label lang="ru-RU">Идентификатор магазина</label>
            <defaultValue></defaultValue>
            <helpText>Client Id for the Ameriabank API</helpText>
            <helpText lang="hy-AM">Ամերիաբանկի API-ին փոխանցվող առևտրային կետի նույնականացուցիչ</helpText>
            <helpText lang="ru-RU">Идентификатор магазина для API Америабанка</helpText>
        </input-field>
        <input-field>
            <name>testUsername</name>
            <label>Username</label>
            <label lang="hy-AM">Մուտքանուն</label>
            <label lang="ru-RU">Имя пользователя</label>
            <defaultValue></defaultValue>
            <helpText>Username for the Ameriabank API</helpText>
            <helpText lang="hy-AM">Ամերիաբանկի API-ին փոխանցվող մուտքանուն</helpText>
            <helpText lang="ru-RU">Имя пользователя для API Америабанка</helpText>
        </input-field>
        <input-field type="password">
            <name>testPassword</name>
            <label>Password</label>
            <label lang="hy-AM">Գաղտնաբառ</label>
            <label lang="ru-RU">Пароль</label>
            <defaultValue></defaultValue>
            <helpText>Password for the Ameriabank API</helpText>
            <helpText lang="hy-AM">Ամերիաբանկի API-ին փոխանցվող գաղտնաբառ</helpText>
            <helpText lang="ru-RU">Пароль для API Америабанка</helpText>
        </input-field>
        <input-field>
            <name>testApiUri</name>
            <label>Main URI</label>
            <label lang="hy-AM">Հիմնական URI</label>
            <label lang="ru-RU">Основной URI</label>
            <defaultValue>https://servicestest.ameriabank.am/VPOS</defaultValue>
            <helpText>Main payment system address</helpText>
            <helpText lang="hy-AM">Հիմնական վճարային համակարգի հասցե</helpText>
            <helpText lang="ru-RU">Адрес основной платежной системы</helpText>
        </input-field>
        <input-field>
            <name>testDescription</name>
            <label>Transaction description</label>
            <label lang="hy-AM">Գործարքի նկարագիր</label>
            <label lang="ru-RU">Описание транзакции</label>
            <defaultValue></defaultValue>
            <helpText>Transaction description</helpText>
            <helpText lang="hy-AM">Գործարքի նկարագիր</helpText>
            <helpText lang="ru-RU">Описание транзакции</helpText>
        </input-field>
    </card>
</config>